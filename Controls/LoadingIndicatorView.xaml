<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AirIQ.Controls.LoadingIndicatorView"
             BackgroundColor="{StaticResource PopupBackground}">

    <Grid ColumnDefinitions="2*,6*,2*">

        <Border StrokeShape="RoundRectangle 12" VerticalOptions="Center" Stroke="{DynamicResource PopupBackground}"  Grid.Column="1">
        <Image Source="loader.gif" IsAnimationPlaying="True"/>
        </Border>
    </Grid>

</ContentPage>