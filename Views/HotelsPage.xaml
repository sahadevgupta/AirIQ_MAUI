<?xml version="1.0" encoding="utf-8" ?>
<views:BasePage
    x:Class="AirIQ.Views.HotelsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:AirIQ.Controls"
    xmlns:views="clr-namespace:AirIQ.Views"
    Title="HotelsPage">

    <Grid RowDefinitions="Auto,*,Auto">
        <!--  Header  -->
        <VerticalStackLayout Padding="20,40,20,10" BackgroundColor="{AppThemeBinding Light={StaticResource PrimaryColor}, Dark={StaticResource PrimaryColorDark}}">
            <Label
                FontAttributes="Bold"
                FontSize="26"
                Text="Find Your Perfect Stay"
                TextColor="White" />
            <Border
                Margin="0,10,0,0"
                BackgroundColor="White"
                HeightRequest="44"
                StrokeShape="RoundRectangle 22">
                <SearchBar
                    BackgroundColor="White"
                    Placeholder="Search destination..."
                    PlaceholderColor="#999"
                    Text="{Binding SearchText}"
                    TextColor="#333" />
            </Border>
        </VerticalStackLayout>
        <!--  Body  -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20,20,20,80" Spacing="20">
                <!--  Search fields  -->
                <Frame
                    Padding="15"
                    BackgroundColor="White"
                    CornerRadius="15"
                    HasShadow="True"
                    Shadow="Medium">
                    <VerticalStackLayout Spacing="10">
                        <Label
                            FontAttributes="Bold"
                            FontSize="14"
                            Text="Destination" />

                        <controls:ExtendedEntry PlaceholderText="Enter city or hotel" Text="{Binding Destination}" />
                        <Label
                            FontAttributes="Bold"
                            FontSize="14"
                            Text="Check-in / Check-out" />
                        <Grid ColumnDefinitions="*,Auto,*" HorizontalOptions="Fill">

<controls:ExtendedDatePicker Date="{Binding CheckIn}"/>

                            
                            <Label Grid.Column="1"
                                Padding="5,0"
                                Text="—"
                                VerticalOptions="Center" />
                                <controls:ExtendedDatePicker Date="{Binding CheckOut}" Grid.Column="2"/>
                        </Grid>
                        <Label
                            FontAttributes="Bold"
                            FontSize="14"
                            Text="Guests" />
                        <Entry Placeholder="2 Adults, 1 Child" Text="{Binding Guests}" />
                        <Button
                            BackgroundColor="#FFD54F"
                            Command="{Binding SearchCommand}"
                            CornerRadius="25"
                            FontAttributes="Bold"
                            HeightRequest="50"
                            Text="Search Hotels"
                            TextColor="Black" />
                    </VerticalStackLayout>
                </Frame>
                <!--  Results  -->
                <CollectionView ItemsSource="{Binding Hotels}" SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame
                                Margin="0,10,0,0"
                                Padding="0"
                                BackgroundColor="{AppThemeBinding Light=White,
                                                                  Dark=#1E1E1E}"
                                CornerRadius="15"
                                HasShadow="True">
                                <Grid
                                    Padding="0"
                                    ColumnDefinitions="*,Auto"
                                    RowDefinitions="150,Auto,Auto">
                                    <!--  Hotel Image  -->
                                    <Image
                                        Grid.Row="0"
                                        Grid.ColumnSpan="2"
                                        Aspect="AspectFill"
                                        HeightRequest="150"
                                        Source="{Binding ImageUrl}" />
                                    <!--  Hotel Name  -->
                                    <Label
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Padding="10,10,0,0"
                                        FontAttributes="Bold"
                                        FontSize="18"
                                        Text="{Binding Name}"
                                        TextColor="{AppThemeBinding Light=#222,
                                                                    Dark=White}" />
                                    <!--  Favorite Icon  -->
                                    <ImageButton
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Padding="10"
                                        BackgroundColor="Transparent"
                                        Source="{Binding IsFavorite, Converter={StaticResource BoolToHeartIconConverter}}" />
                                    <!--  Rating and Price  -->
                                    <HorizontalStackLayout
                                        Grid.Row="2"
                                        Grid.ColumnSpan="2"
                                        Padding="10,0,10,10">
                                        <Label Text="{Binding Rating, StringFormat='⭐ {0:F1}'}" TextColor="#FFC107" />
                                        <Label
                                            FontAttributes="Bold"
                                            Text="{Binding Price, StringFormat='${0}/night'}"
                                            TextColor="#00A2B5" />
                                    </HorizontalStackLayout>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
        <!--  Bottom Navigation  -->
        <Grid
            Grid.Row="2"
            BackgroundColor="{AppThemeBinding Light=White,
                                              Dark=#1E1E1E}"
            ColumnDefinitions="*,*,*,*"
            HeightRequest="60">
            <ImageButton Source="icon_home.png" />
            <ImageButton Grid.Column="1" Source="icon_hotels.png" />
            <ImageButton Grid.Column="2" Source="icon_bookings.png" />
            <ImageButton Grid.Column="3" Source="icon_profile.png" />
        </Grid>
    </Grid>

</views:BasePage>
