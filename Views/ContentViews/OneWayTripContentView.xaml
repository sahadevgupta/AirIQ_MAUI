<?xml version="1.0" encoding="utf-8" ?>
<Grid
    x:Class="AirIQ.Views.ContentViews.OneWayTripContentView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:AirIQ.Controls"
    xmlns:resx="clr-namespace:AirIQ.Resources.Strings"
    Padding="16">

    <Border
        Padding="15"
        BackgroundColor="White"
        StrokeShape="RoundRectangle 12"
        StrokeThickness="0">

        <VerticalStackLayout Spacing="18">

            <controls:ExtendedDropdown
                Title="{x:Static resx:AppResource.From}"
                ItemsSource="{Binding SourceAirports}"
                PlaceholderText="{x:Static resx:AppResource.SearchDepartureAirport}" 
                SelectedItem="{Binding SelectedSourceAirport}"
                CanEdit="True"
                TextChangeCommand="{Binding SearchSourceAirportsCommand}"
                DisplayMemberPath="OriginRoute"/>

            <controls:ExtendedDropdown
                Title="{x:Static resx:AppResource.To}"
                ItemsSource="{Binding DestinationAirports}"
                PlaceholderText="{x:Static resx:AppResource.SearchDestinationAirport}" 
                SelectedItem="{Binding SelectedDestinationAirport}"
                TextChangeCommand="{Binding SearchDestinationAirportsCommand}"
                DisplayMemberPath="DestinationRoute"
                CanEdit="True"/>


            <controls:ExtendedDatePicker Title="{x:Static resx:AppResource.TravelDate}" 
                Date="{Binding SelectedTravelDate}"
                AllowedDates="{Binding AllowedDates}"
                Grid.Row="2" />

            <controls:ExtendedDropdown Title="{x:Static resx:AppResource.PaxSize}" Grid.Row="3"
                                       SelectedItem="{Binding SelectedPaxSize}">
                <controls:ExtendedDropdown.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>1</x:String>
                        <x:String>2</x:String>
                        <x:String>3</x:String>
                        <x:String>4</x:String>
                        <x:String>5</x:String>
                    </x:Array>
                </controls:ExtendedDropdown.ItemsSource>
            </controls:ExtendedDropdown>

            <Button
                Grid.Row="4"
                Margin="0,10,0,0"
                Text="{x:Static resx:AppResource.SearchFlights}"
                Command="{Binding SearchFlightsCommand}"
                Style="{StaticResource AccentButton}"/>

        </VerticalStackLayout>

    </Border>

</Grid>
