<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AirIQ.Views.ContentViews.TopTabView"
             xmlns:enum="clr-namespace:AirIQ.Enums"
             x:DataType="enum:BookingTypes"
             xmlns:template="clr-namespace:AirIQ.Controls.TemplateSelector"
             xmlns:view ="clr-namespace:AirIQ.Views.ContentViews"
             xmlns:converter="clr-namespace:AirIQ.Converter"
             x:Name="topTabView" 
             BackgroundColor="Transparent">

    <ContentView.Resources>
        <converter:TabHighlightConverter x:Key="TabHighlightConverter" />
        <converter:TabTextColorConverter x:Key="TabTextColorConverter" />
        
        <ResourceDictionary>
            <DataTemplate x:Key="OneWayTemplate">
                <view:OneWayTripContentView BackgroundColor="AliceBlue"/>
            </DataTemplate>
            
            <DataTemplate x:Key="RoundTripTemplate">
                <view:RoundTripContentView BackgroundColor="AliceBlue"/>
            </DataTemplate>

            <template:FlightTabTemplateSelector x:Key="BookingTypeSelector" 
                                                OneWayTemplate="{StaticResource OneWayTemplate}"
                                                RoundTripTemplate="{StaticResource RoundTripTemplate}"/>
        </ResourceDictionary>
  
    </ContentView.Resources>
    <Grid RowDefinitions="Auto,Auto, *" BackgroundColor="White"
          RowSpacing="24">
        <Label Grid.Row="0" 
               Text="Book Flights"  
               FontSize="22"
               Margin="0,10,0,10"
               TextColor="Black"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>

        <Grid Grid.Row="1"
              Padding="10,0,10,0"
              ColumnDefinitions="*,*" 
              BackgroundColor="Transparent" 
              ColumnSpacing="0">
            <Border Grid.Column="0" 
                    Padding="16"
                    StrokeShape="RoundRectangle 16,0,16,0"
                    StrokeThickness="0"
                    BackgroundColor="{Binding Source={x:Reference topTabView}, Path=SelectedTab,
                                              Converter={StaticResource TabHighlightConverter},
                                              ConverterParameter={x:Static enum:BookingTypes.OneWay}}">
                <Label 
                    Text="ONE WAY" 
                    HorizontalOptions="Center" 
                    TextColor="{Binding Source={x:Reference topTabView}, Path=SelectedTab, Converter={StaticResource TabTextColorConverter},ConverterParameter={x:Static enum:BookingTypes.OneWay}}"
                    VerticalOptions="Center" />
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OneWayClicked"/>
                </Border.GestureRecognizers>
            </Border>

            <Border Grid.Column="1"
                    StrokeThickness="0"
                    Padding="16"
                    StrokeShape="RoundRectangle 0,16,0,16"
                    BackgroundColor="{Binding Source={x:Reference topTabView}, Path=SelectedTab,
                                              Converter={StaticResource TabHighlightConverter},
                                              ConverterParameter={x:Static enum:BookingTypes.RoundTrip}}">
                <Label Text="ROUND TRIP" 
                       HorizontalOptions="Center"
                       TextColor="{Binding Source={x:Reference topTabView}, Path=SelectedTab, Converter={StaticResource TabTextColorConverter},ConverterParameter={x:Static enum:BookingTypes.RoundTrip}}"
                       VerticalOptions="Center"/>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="RoundTripClicked"/>
                </Border.GestureRecognizers>
            </Border>
        </Grid>

        <ContentView Grid.Row="2" x:Name="DynamicHost"/>

    </Grid>
</ContentView>
