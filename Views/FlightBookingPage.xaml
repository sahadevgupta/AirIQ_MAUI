<?xml version="1.0" encoding="utf-8" ?>
<views:BasePage
    x:Class="AirIQ.Views.FlightBookingPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:AirIQ.Controls"
    xmlns:helpers="clr-namespace:AirIQ.Extensions"
    xmlns:models="clr-namespace:AirIQ.Model"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewmodels="clr-namespace:AirIQ.ViewModels"
    xmlns:views="clr-namespace:AirIQ.Views"
    Title="FlightBookingPage"
    x:DataType="viewmodels:FlightBookingPageViewModel">

    <views:BasePage.PageContent>

        <Grid
            ColumnDefinitions="*"
            ColumnSpacing="20"
            RowDefinitions="Auto,Auto,Auto,*,Auto"
            RowSpacing="10">


            <Border
                Padding="20,0"
                BackgroundColor="{StaticResource PrimaryColor}"
                StrokeShape="RoundRectangle 0,0,20,20"
                StrokeThickness="0">

                <!--  Title  -->
                <Label
                    Grid.Column="1"
                    FontAttributes="Bold"
                    FontSize="26"
                    Text="Booking Details"
                    TextColor="White"
                    VerticalOptions="Start" />

            </Border>

            <!--  Flight Card  -->
            <Border
                Grid.Row="0"
                Grid.RowSpan="1"
                Margin="20,0"
                Padding="20"
                BackgroundColor="White"
                StrokeShape="RoundRectangle 20"
                TranslationY="50"
                VerticalOptions="End">

                <Grid
                    ColumnDefinitions="Auto,*,Auto"
                    ColumnSpacing="15"
                    RowDefinitions="Auto,Auto">

                    <!--  Airline Logo  -->
                    <Image
                        Grid.RowSpan="2"
                        HeightRequest="50"
                        Source="{Binding SelectedAirline.AirlineLogoUrl}"
                        VerticalOptions="Start"
                        WidthRequest="50" />

                    <!--  Airline Name  -->
                    <Label Grid.Column="1">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span
                                    Style="{StaticResource TitleStyleBlackBold}"
                                    Text="{Binding SelectedAirline.Airline}"
                                    TextColor="Black" />
                                <Span Text=" | " />
                                <Span
                                    FontAttributes="None"
                                    Style="{StaticResource TitleStyleBlackBold}"
                                    Text="{Binding SelectedAirline.FlightNumber}" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                    <!--  Price  -->
                    <Label
                        Grid.Column="2"
                        FontSize="18"
                        HorizontalTextAlignment="End"
                        Style="{StaticResource TitleStyleBlackBold}"
                        Text="{Binding SelectedAirline.Price, StringFormat='₹ {0}'}"
                        TextColor="{StaticResource Azure}"
                        VerticalOptions="Start" />

                    <!--  Times  -->
                    <Grid
                        Grid.Row="1"
                        Grid.ColumnSpan="3"
                        Margin="0,10,0,0"
                        ColumnDefinitions="*,*">

                        <!--  Departure  -->
                        <VerticalStackLayout>
                            <Label
                                FontSize="28"
                                Style="{StaticResource HeaderTitleStyleBlackBold}"
                                Text="{Binding SelectedAirline.DepartureTime}"
                                TextColor="Black" />
                            <Label
                                FontSize="13"
                                Text="{Binding SelectedAirline.Origin}"
                                TextColor="#777" />
                        </VerticalStackLayout>

                        <Label
                            Grid.ColumnSpan="2"
                            HorizontalTextAlignment="Center"
                            Style="{StaticResource SupportLabelStyleBlackRegular}"
                            Text="{Binding SelectedAirline.FlightRoute}"
                            TextColor="#777"
                            VerticalTextAlignment="Center" />

                        <!--  Arrival  -->
                        <VerticalStackLayout Grid.Column="1">
                            <Label
                                FontSize="28"
                                HorizontalTextAlignment="End"
                                Style="{StaticResource Label18StyleBold}"
                                Text="{Binding SelectedAirline.ArrivalTime}"
                                TextColor="Black" />
                            <Label
                                FontSize="13"
                                HorizontalTextAlignment="End"
                                Text="{Binding SelectedAirline.Destination}"
                                TextColor="#777" />
                        </VerticalStackLayout>
                    </Grid>
                </Grid>
            </Border>

            <!--  Passenger Details  -->
            <Label Margin="0,20,0,0"
                Grid.Row="2"
                Padding="20"
                FontSize="20"
                VerticalOptions="Center"
                Style="{StaticResource Label14StyleBlack}"
                Text="Passenger Details"
                TextColor="Black" />

            <Button Margin="0,25,10,0"
                Grid.Row="2"
                Command="{Binding AddPassengerCommand}"
                HorizontalOptions="End"
                Text="Add Infant"
                VerticalOptions="Center">
                <Button.ImageSource>
                    <FontImageSource
                        FontFamily="MyFont"
                        Glyph="{x:Static helpers:FontAwesomeIcons.Plus}"
                        Size="14"
                        Color="White" />
                </Button.ImageSource>
            </Button>

            <CollectionView BackgroundColor="Transparent"
                Grid.Row="3"
                Margin="10,0"
                ItemsSource="{Binding AdultPassengers}"
                SelectionMode="None"
                VerticalOptions="Start">

                <CollectionView.ItemsLayout>
                    <LinearItemsLayout ItemSpacing="10" Orientation="Vertical" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Passenger">

                        <toolkit:Expander>
                            <toolkit:Expander.Header>

                                <Border StrokeShape="RoundRectangle 8"
                                     StrokeThickness="1" Stroke="#DADADA" BackgroundColor="#EDF2FA">
                                <Grid
                                    Padding="10"
                                    ColumnDefinitions="Auto,*,Auto"
                                    ColumnSpacing="10">

                                    <Label
                                        FontSize="16"
                                        Style="{StaticResource Label16StyleBold}"
                                        Text="{Binding Id}"
                                        TextColor="Black"
                                        VerticalOptions="Center" />


                                    <Image
                                        Grid.Column="2"
                                        Aspect="Center"
                                        Source="arrow_down.png" />

                                </Grid>
</Border>
                            </toolkit:Expander.Header>
                            <Border Margin="0,10,0,0"
                                Padding="10"
                                StrokeShape="RoundRectangle 8"
                                BackgroundColor="White"
                                Stroke="White">
                                <Grid
                                    ColumnDefinitions="*,*"
                                    ColumnSpacing="10"
                                    RowDefinitions="Auto,Auto">
                                    <controls:ExtendedDropdown PlaceholderText="Gender" />
                                    <controls:ExtendedDropdown Grid.Column="1" PlaceholderText="Title" />

                                    <controls:ExtendedEntry
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        PlaceholderText="First Name"
                                        Text="{Binding FirstName}" />
                                    <controls:ExtendedEntry
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        PlaceholderText="Last Name"
                                        Text="{Binding LastName}" />
                                </Grid>
                            </Border>
                        </toolkit:Expander>

                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>


            <!--  Bottom Sheet  -->
            <Border
                Grid.Row="4"
                Padding="20"
                BackgroundColor="White"
                Stroke="{StaticResource AshtonSkies}"
                StrokeShape="RoundRectangle 30,30,0,0"
                VerticalOptions="End">

                <Border.Shadow>
                    <Shadow
                        Brush="#33000000"
                        Opacity="0.7"
                        Radius="10"
                        Offset="0, -2" />
                </Border.Shadow>

                <Grid ColumnDefinitions="*,Auto" VerticalOptions="Center">

                    <VerticalStackLayout>
                        <Label Style="{StaticResource Label18StyleBold}" Text="Total" />

                        <Label
                            Style="{StaticResource SupportLabelStyleBlackRegular}"
                            Text="{Binding TravellersCountText}"
                            TextColor="#777" />

                        <Label
                            FontAttributes="Bold"
                            FontSize="22"
                            Text="{Binding TotalPrice, StringFormat='₹ {0}'}"
                            TextColor="{StaticResource Azure}" />
                    </VerticalStackLayout>

                    <Button
                        Grid.Column="1"
                        Padding="25,12"
                        BackgroundColor="#0A84FF"
                        Command="{Binding ContinueCommand}"
                        CornerRadius="18"
                        FontAttributes="Bold"
                        Text="Continue"
                        TextColor="White"
                        VerticalOptions="Center" />
                </Grid>
            </Border>

        </Grid>


    </views:BasePage.PageContent>

</views:BasePage>
