<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AirIQ.Views.DashboardPage"
             xmlns:viewmodel="clr-namespace:AirIQ.ViewModels"
             x:DataType="viewmodel:DashboardPageViewModel"
             xmlns:view="clr-namespace:AirIQ.Views.ContentViews"
             xmlns:controls="clr-namespace:AirIQ.Controls"
             BackgroundColor="AliceBlue"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,Auto" 
          RowSpacing="0">
        <view:TopTabView x:Name="FlightTabs" 
                         SelectedTab="{Binding SelectedTab, Mode=TwoWay}" 
                         TabChangedCommand="{Binding SelectTabCommand}"/>
    </Grid>

</ContentPage>