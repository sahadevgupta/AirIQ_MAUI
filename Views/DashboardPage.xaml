<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
  x:Class="AirIQ.Views.DashboardPage"
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:controls="clr-namespace:AirIQ.Controls"
  xmlns:template="clr-namespace:AirIQ.Views.ContentViews"
  xmlns:view="clr-namespace:AirIQ.Views.ContentViews"
  xmlns:viewmodel="clr-namespace:AirIQ.ViewModels"
  x:DataType="viewmodel:DashboardPageViewModel"
  BackgroundColor="AliceBlue"
  Shell.NavBarIsVisible="False">

  <Grid RowDefinitions="Auto,*">

    <Border Grid.Row="0" BackgroundColor="White">
      <Label
        Grid.Row="0"
        Margin="0,10,0,10"
        FontSize="22"
        HorizontalOptions="Center"
        Text="Book Flights"
        TextColor="Black"
        VerticalOptions="Center" />
    </Border>
    
    <template:OneWayTripContentView Grid.Row="1" />

  </Grid>

</ContentPage>
